''' identity function (\x -> x) '''
id = +id($l:X) +id($r:X).

''' id id '''
id_arg = $id'($l:X) +arg($l:$r:X).
linker = -id(X) -arg(X); @+arg($r:X) $out(X).
print id id_arg linker.

''' id x '''
x_arg = $x(X) +arg($l:X).
linker = -id(X) -arg(X); @+arg($r:X) $out(X).
print id x_arg linker.

''' linear types '''
"a -o a" = galaxy
	test1:
		-x(X) +parxy(X); -y(X);
		@-parxy(X) $ok.
	test2:
		-x(X); -y(X) +parxy(X);
		@-parxy(X) $ok.
end

adapter = -id($l:X) +x(X); -id($r:X) +y(X).

vehicle :: "a -o a".
vehicle = id adapter.
